select 
artnr, artbez,artelmsel, etbnam, artlng, artbre, arthoe,
    case 
        when artmgehwws = 'MTP' then ltt.artlttmgmax / 1000
        else ltt.artlttmgmax end as artlttmgmax, ltt.artlttlng, ltt.artlttbre, ltt.artltthoe,
    case artmgehwws
        when 'NRL' then 'Рул.'
        when 'MTP' then 'М.п.'
        when 'PR' then 'Пара'
        when 'PCE' then 'Шт.'
        when 'BG' then 'Мешок'
        when 'PA' then 'Упак.'
        when 'LEF' then 'Лист'
    else artmgehwws end as artmgehwws, 
    case
        when artklaabc = 1 then 'A'
        when artklaabc = 2 then 'B'
        when artklaabc = 3 then 'C'
        when artklaabc = 4 then 'D'
else to_char(artklaabc) end as artklaabc, 
artelmsel2, artinfo8, artmhdtagezul, artmhdtagezulplus from PETR_S2_PDBA.art_t art
left join PETR_S2_PDBA.artltt_t ltt on ltt.artid = art.artid and lttnam = 'PF'
