WITH info as (select art.artnr, art.artbez, art.artelmsel, art.etbnam, pl.plnam, pl.etbnam pletbnam from PETR_S3_PDBA.art_t art
left join PETR_S3_PDBA.bst_t bst on art.artid = bst.artid
left join PETR_S3_PDBA.te_t te on bst.tenam = te.tenam
left join PETR_S3_PDBA.pl_t pl on pl.plnam = te.plnam)

select artnr, artbez, artelmsel, etbnam, plnam, pletbnam from info
where regexp_like(plnam, '^([0-9])+\w')
